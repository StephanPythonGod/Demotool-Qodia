{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit with Poetry",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "Run Streamlit with Poetry"
        }
    ]
}
